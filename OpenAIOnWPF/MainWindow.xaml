<fw:AcrylicWindow x:Class="OpenAIOnWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenAIOnWPF"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:mdxam="clr-namespace:MdXaml;assembly=MdXaml"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        fw:PointerTracker.Enabled="True" 
        mc:Ignorable="d"
        Title="OpenAI"
        Width="700"
        Height="433"
        KeyDown="Window_KeyDown"
        Icon="/OpenAI.png"
        Closing="Window_Closing"
        ui:ThemeManager.IsThemeAware="True"
        BorderBrush="{DynamicResource SystemAltHighColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <fw:DropShadowPanel ShadowMode="Inner"
                            Color="{DynamicResource SystemChromeBlackHighColor}"
                            Grid.Row="0"
                            BlurRadius="100"
                            Panel.ZIndex="-5"
                            ShadowOpacity="0.2">
        <Grid Height="60"
              Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel HorizontalAlignment="Left"
                        Margin="15,0,0,0"
                        Grid.Column="0"
                        VerticalAlignment="Center">
                <Label Content="Configuration"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                        <ComboBox x:Name="ConfigurationComboBox"
                                  VerticalAlignment="Center"
                                  MaxDropDownHeight="500"
                                  MaxWidth="200"
                                  Margin="0,0,5,0"
                                  SelectionChanged="ConfigurationComboBox_SelectionChanged"
                                  HorizontalAlignment="Stretch"
                                  MinWidth="100">
                            <ComboBox.Background>
                                <SolidColorBrush Color="{DynamicResource SystemChromeLowColor}"
                                                 Opacity="0.5"></SolidColorBrush>
                            </ComboBox.Background>
                        </ComboBox>
                        <Button x:Name="ConfigurationSettingButton"
                            Grid.Column="1"
                            Content="..."
                            Style="{StaticResource ButtonRevealStyle}"
                            fw:RevealElement.BorderRadius="4"
                            Click="ConfigurationSettingButton_Click"
                            VerticalAlignment="Center"
                            Width="30"
                            Height="32" />
                </Grid>
            </StackPanel>
            <StackPanel Grid.Column="3"
                        Margin="15,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                <Label Content="Instruction"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                        <ComboBox x:Name="InstructionComboBox"
                                  MaxDropDownHeight="500"
                                  Grid.Column="0"
                                  SelectionChanged="InstructionComboBox_SelectionChanged"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Margin="0,0,5,0"
                                  MaxWidth="200"
                                  MinWidth="100">
                            <ComboBox.Background>
                                <SolidColorBrush Color="{DynamicResource SystemChromeLowColor}"
                                                 Opacity="0.5"></SolidColorBrush>
                            </ComboBox.Background>
                        </ComboBox>
                        <Button x:Name="InstructionSettingButton"
                              Grid.Column="1"
                            Style="{StaticResource ButtonRevealStyle}"
                            fw:RevealElement.BorderRadius="4"
                            Content="..."
                            Click="InstructionSettingButton_Click"
                            VerticalAlignment="Center"
                            Width="30"
                            Height="32" />
                </Grid>
            </StackPanel>
                <StackPanel Grid.Column="4"
                            Margin="15,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                    <CheckBox x:Name="UseConversationHistoryCheckBox"
                              Content="Use Conversation History"
                              Click="UseConversationHistoryCheckBox_Click" />
                </StackPanel>
                <StackPanel Grid.Column="5"
                            Margin="15,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                        <Button x:Name="ConversationHistoryClearButton"
                            Style="{StaticResource ButtonRevealStyle}"
                            fw:RevealElement.BorderRadius="4"
                            Content="Clear"
                            Click="ConversationHistoryClearButton_Click"
                            VerticalAlignment="Center"
                            Height="30"
                            Width="40" />
                </StackPanel>
                <Menu Grid.Column="7"
                  Height="60"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Right"
                  Margin="0,0,15,0">
                <MenuItem Header="Settings"
                          Padding="0,0,0,0"
                          Height="60">
                    <MenuItem x:Name="ColorMenuItem"
                              Header="Color Theme"
                              InputGestureText="F2"
                              Click="ColorMenuItem_Click" />
                </MenuItem>
            </Menu>
            </Grid>
        </fw:DropShadowPanel>
        <Button x:Name="BottomScrollButton"
                Content="⬇"
                Grid.Row="1"
                Style="{StaticResource ButtonRevealStyle}"
                fw:RevealElement.BorderRadius="100"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="0,0,20,10"
                Width="32"
                Height="32"
                Panel.ZIndex="10"
                Click="BottomScrollButton_Click"
                Opacity="0.6" />
     <!--<Thumb x:Name="ResizeThumb" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="15" Height="15" DragDelta="ResizeThumb_DragDelta" Background="gray" 
            ToolTip="You can resize the user text box by dragging it with the mouse."/>-->
        <ScrollViewer x:Name="MessageScrollViewer"
                      Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      ScrollChanged="MessageScrollViewer_ScrollChanged">
            <StackPanel x:Name="MessagesPanel" />
        </ScrollViewer>
            <mdxam:MarkdownScrollViewer xml:space="preserve"
                                        x:Name="AssistantMarkdownText"
                                        MinHeight="80"
                                        MinWidth="0"
                                        Grid.Row="3"
                                        MarkdownStyleName="Sasabune"
                                        Padding="10,10,10,10"
                                        MouseWheel="AssistantMarkdownText_MouseWheel"
                                        FontSize="14" />
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="90" />
            </Grid.ColumnDefinitions>                      
        <TextBox x:Name="UserTextBox"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 MinWidth="0"
                 KeyDown="UserTextBox_KeyDown"
                 FontSize="16"
                 Grid.Column="0"
                 VerticalScrollBarVisibility="Auto"
                 MouseWheel="UserTextBox_MouseWheel"
                 ui:ControlHelper.PlaceholderText="Send a message..."
                 TextChanged="UserTextBox_TextChanged"
                 VerticalAlignment="Bottom"
                 MaxHeight="180"
                 Padding="10,10,10,10"
                 Margin="5,0,0,0">
            <TextBox.Background>
                <SolidColorBrush Color="{DynamicResource SystemChromeLowColor}"
                                 Opacity="0.5"></SolidColorBrush>
            </TextBox.Background>
        </TextBox>
            <Button x:Name="ExecButton"
                    Content="Send"
                    Style="{StaticResource ButtonRevealStyle}"
                    Foreground="{DynamicResource SystemBaseMediumHighColorBrush}"
                    fw:RevealElement.BorderRadius="4"
                    Click="ExecButton_Click"
                    Margin="5,0,0,0"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Grid.Column="1"
                    FontSize="16" />
            <ProgressBar x:Name="ProgressBar"
                         Grid.Column="1"
                         Visibility="Collapsed"
                         VerticalAlignment="Bottom"
                         Background="#00000000"
                         Opacity="0.5" />
            <CheckBox x:Name="NoticeCheckbox"
                      Content="Notice"
                      Grid.Column="2"
                      HorizontalAlignment="Center"
                      MinWidth="0"
                      MinHeight="0"
                      Margin="10,0,10,0"
                      Click="NoticeCheckbox_Click"
                      IsChecked="False" />
        </Grid>
        <StatusBar Grid.Row="3"
                   Background="#00000000">
            <StatusBarItem HorizontalAlignment="Right"
                           DockPanel.Dock="Right">
                <Label x:Name="TokenUsageButton"
                       Content="📊"
                       Padding="10,0,10,0"
                       MouseLeftButtonDown="TokenUsage_MouseLeftButtonDown"
                       Foreground="#FF959595" />
            </StatusBarItem>
            <Separator DockPanel.Dock="Right" />
            <StatusBarItem HorizontalAlignment="Right"
                           DockPanel.Dock="Right">
                <Label x:Name="ConversationHistoryButton"
                       Content="💬"
                       Padding="10,0,10,0"
                       MouseLeftButtonDown="ConversationHistoryButton_MouseLeftButtonDown"
                       Foreground="#FF959595" />
            </StatusBarItem>
            <Separator DockPanel.Dock="Right" />
            <StatusBarItem DockPanel.Dock="Right"
                           HorizontalAlignment="Right">
                    <Label x:Name="TokensLabel"
                           HorizontalAlignment="Right"
                           Foreground="#FF959595"
                           MouseLeftButtonDown="TokensLabel_MouseLeftButtonDown"
                           Padding="10,0,10,0"
                           VerticalAlignment="Center" />
            </StatusBarItem>
            <Separator DockPanel.Dock="Right" />
            <StatusBarItem DockPanel.Dock="Right"
                           HorizontalAlignment="Right">
                    <Label x:Name="TimeLabel"
                           HorizontalAlignment="Right"
                           Foreground="#FF959595"
                           Padding="10,0,10,0"
                           VerticalAlignment="Center" />
            </StatusBarItem>
        </StatusBar>
        <!-- https://github.com/whistyun/MdXaml/wiki/How-to-customise-style -->
    </Grid>
            <fw:AcrylicWindow.Background>
                <SolidColorBrush Color="{DynamicResource SystemChromeLowColor}"
                                 Opacity="0.3"></SolidColorBrush>
            </fw:AcrylicWindow.Background>
</fw:AcrylicWindow>
