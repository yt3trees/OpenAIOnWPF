<Window x:Class="OpenAIOnWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenAIOnWPF"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:mdxam="clr-namespace:MdXaml;assembly=MdXaml"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="OpenAI"
        Width="600"
        HorizontalAlignment="Right"
        WindowStartupLocation="CenterScreen"
        VerticalAlignment="Top"
        Height="300"
        SizeToContent="Height"
        KeyDown="Window_KeyDown"
        Icon="/OpenAI.png"
        Topmost="True"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="35" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Height="60"
              Grid.Row="0">
            <StackPanel HorizontalAlignment="Left"
                        Margin="15,0,0,0"
                        VerticalAlignment="Center">
                <Label Content="Model"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" />
                <ComboBox x:Name="ModelComboBox"
                          VerticalAlignment="Center"
                          MaxDropDownHeight="500"
                          SelectionChanged="ModelComboBox_SelectionChanged" />
            </StackPanel>
        </Grid>
        <TextBox x:Name="UserTextBox"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 MinHeight="80"
                 MinWidth="0"
                 KeyDown="UserTextBox_KeyDown"
                 FontSize="16"
                 Grid.Row="1"
                 VerticalScrollBarVisibility="Auto"
                 MouseWheel="UserTextBox_MouseWheel" />
        <Button x:Name="ExecButton"
                Content="Send"
                Height="35"
                Click="ExecButton_Click"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Grid.Row="2" />
        <!--<TextBox x:Name="AssistantTextBox"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalAlignment="Top"
                 MinHeight="80"
                 MinWidth="0"
                 ui:ControlHelper.PlaceholderText="AI Response" />-->
        <mdxam:MarkdownScrollViewer xml:space="preserve"
                                    x:Name="AssistantMarkdownText"
                                    MinHeight="80"
                                    MinWidth="0"
                                    MarkdownStyleName="Sasabune"
                                    ScrollViewer.CanContentScroll="True"
                                    Grid.Row="3"
                                    Padding="10,10,10,10"
                                    MouseWheel="AssistantMarkdownText_MouseWheel" />
        <!-- https://github.com/whistyun/MdXaml/wiki/How-to-customise-style -->
    </Grid>
</Window>
