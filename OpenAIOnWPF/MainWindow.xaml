<Window x:Class="OpenAIOnWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenAIOnWPF"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="OpenAI"
        Width="600"
        HorizontalAlignment="Right"
        WindowStartupLocation="CenterScreen"
        VerticalAlignment="Top"
        Height="300"
        SizeToContent="Height"
        KeyDown="Window_KeyDown"
        Icon="/OpenAI.png"
        Topmost="True"
        Closing="Window_Closing">
    <StackPanel>
        <TextBox x:Name="UserTextBox"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalAlignment="Top"
                 MinHeight="80"
                 MinWidth="0"
                 KeyDown="UserTextBox_KeyDown" />
        <Button x:Name="ExecButton"
                Content="Send"
                Height="35"
                Click="ExecButton_Click"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch" />
        <TextBox x:Name="AssistantTextBox"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalAlignment="Top"
                 MinHeight="80"
                 MinWidth="0"
                 ui:ControlHelper.PlaceholderText="AI Response"
                 />
    </StackPanel>
</Window>
