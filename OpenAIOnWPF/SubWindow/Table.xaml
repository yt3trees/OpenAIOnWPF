<fw:AcrylicWindow x:Class="OpenAIOnWPF.Table"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenAIOnWPF"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        AcrylicWindowStyle="NoIcon"
        mc:Ignorable="d"
        Title="Table"
        WindowStartupLocation="CenterOwner"
        BorderBrush="{DynamicResource SystemAltHighColor}"
        ShowInTaskbar="False"
        MinWidth="600"
        MinHeight="250"
        HorizontalContentAlignment="Center"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        Closing="Window_Closing"
        KeyDown="Window_KeyDown">
    <Window.Resources>
        <Style TargetType="TextBox"
               x:Key="editingTextBoxStyle">
               <Setter Property="TextWrapping" Value="Wrap" />
            <EventSetter Event="KeyDown"
                         Handler="editingTextBox_KeyDown" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Button x:Name="OkButton"
                Content="OK"
                Grid.Row="2"
                Style="{StaticResource AccentButtonStyle}"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Margin="0,0,10,0"
                MinWidth="60"
                Click="OkButton_Click" />
        <DataGrid x:Name="DataTable"
                  Grid.Row="1"
                  AutoGeneratingColumn="dataGrid_AutoGeneratingColumn"
                  AutoGenerateColumns="True" />
        <StackPanel HorizontalAlignment="Center"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center">
            <Label Content="Number of conversation histories to keep"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
            <ui:NumberBox x:Name="Numberbox"
                          MinWidth="200"
                          MinHeight="0"
                          SpinButtonPlacementMode="Inline"
                          SmallChange="1"
                          Padding="10,10,10,10"
                          Minimum="0"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</fw:AcrylicWindow>
