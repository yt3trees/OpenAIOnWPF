<fw:AcrylicWindow x:Class="OpenAIOnWPF.Table"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenAIOnWPF"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        AcrylicWindowStyle="NoIcon"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        BorderBrush="{DynamicResource SystemAltHighColor}"
        ShowInTaskbar="False"
        HorizontalContentAlignment="Center"
        WindowStyle="None"
        Closing="Window_Closing"
        SizeToContent="Height"
        KeyDown="Window_KeyDown"
        Width="1200"
        Loaded="AcrylicWindow_Loaded">
    <Window.Resources>
        <Style TargetType="TextBox"
               x:Key="editingTextBoxStyle">
               <Setter Property="TextWrapping" Value="Wrap" />
            <EventSetter Event="KeyDown"
                         Handler="editingTextBox_KeyDown" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="2"
                    Margin="0,0,10,0"
              HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
            </Grid.ColumnDefinitions>
            <Button x:Name="ExportButton"
                    Style="{StaticResource ButtonRevealStyle}"
                    fw:RevealElement.BorderRadius="2"
                    FontSize="16"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Width="32"
                    Height="32"
                    VerticalContentAlignment="Center"
                    HorizontalAlignment="Center"
                    ToolTip="Outputs instructions as a JSON file."
                    Click="ExportButton_Click">
                <ui:SymbolIcon Symbol="Upload" />
            </Button>
            <Button x:Name="ImportButton"
                    Style="{StaticResource ButtonRevealStyle}"
                    fw:RevealElement.BorderRadius="2"
                    FontSize="16"
                    Grid.Row="2"
                    Grid.Column="3"
                    VerticalAlignment="Center"
                    Width="32"
                    Height="32"
                    VerticalContentAlignment="Center"
                    HorizontalAlignment="Center"
                    ToolTip="Select a JSON file to import."
                    Click="ImportButton_Click">
                <ui:SymbolIcon Symbol="Download" />
            </Button>
            <Button x:Name="SaveButton"
                    Grid.Column="0"
                    Content="Save"
                    Style="{StaticResource AccentButtonStyle}"
                    MinWidth="60"
                    Click="SaveButton_Click"
                    Height="32"
                    HorizontalAlignment="Center" />
            <Button x:Name="CancelButton"
                    Grid.Column="1"
                    Content="Cancel"
                    MinWidth="60"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Height="32"
                    Click="CancelButton_Click" />
        </Grid>
        <DataGrid x:Name="DataTable"
                  Grid.Row="1"
                  AutoGeneratingColumn="dataGrid_AutoGeneratingColumn"
                  AutoGenerateColumns="True"
                  Loaded="DataTable_Loaded" />
        <StackPanel HorizontalAlignment="Center"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center">
            <Label Content="Conversation History Limit"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
            <ui:NumberBox x:Name="Numberbox"
                          MinWidth="200"
                          MinHeight="0"
                          SpinButtonPlacementMode="Inline"
                          SmallChange="1"
                          Padding="10,10,10,10"
                          Minimum="0"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
            <fw:AcrylicWindow.Background>
                <SolidColorBrush Color="{DynamicResource SystemChromeLowColor}"
                                 Opacity="0.3"></SolidColorBrush>
            </fw:AcrylicWindow.Background>
</fw:AcrylicWindow>
